    "@testing-library/react-hooks": "^8.0.1",
    "@total-typescript/ts-reset": "^0.5.1",
    "date-fns": "^3.6.0",
    "postmark": "^4.0.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.51.0",
    "react-router-dom": "^6.27.0",
    "stripe": "^16.9.0",
    "uuid": "^9.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
